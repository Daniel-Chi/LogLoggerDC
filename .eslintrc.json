{
    "env": {
        "browser": true,
        "commonjs": true,
        
        "node": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018
    },

    "rules": {
        "no-duplicate-case":"error",
      "no-empty":"error",
      "no-extra-semi":"error",
      "no-func-assign": "error",
      "no-irregular-whitespace":"error",
      "no-unreachable": "error",
      "curly": "error",
      "dot-notation": "error",
      "eqeqeq": "error",
      "no-empty-function": "error",
       "no-multi-spaces": 1,
      "no-mixed-spaces-and-tabs": "error",
      "no-trailing-spaces": 1,
      "default-case": "error",
      "no-fallthrough": "error",
      "no-unused-vars": 1,
      "no-use-before-define": "error",
      "no-redeclare": "error",
      "camelcase": "error",
      "brace-style": "error",
      "indent": [
          1,
          4
      ],
      "linebreak-style": [
          "error",
          "unix"
      ],
      "quotes": [
          1,
          "double"
      ],
      "semi": [
          "error",
          "always"
      ]
    }
}